    </ProtoInstance>

<!--everything in here is necessary for generating the grid-->
<Group DEF="grid">
</Group>

<PythonScript url="grid.py">
	<Group USE="grid" containerField="references"/>
</PythonScript>
<!--/grid-->
  
<Fog color="0 0 0" fogType="LINEAR" visibilityRange="3.5"/>  

<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <Transform DEF='transform1' translation = '0 0.1 0'>
