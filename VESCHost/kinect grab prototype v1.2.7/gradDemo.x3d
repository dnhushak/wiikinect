    </Shape>
    </ToggleGroup>
    <ViscosityEffect DEF='visc1'/>
  </Transform>
  <PythonScript url='grab.py'>
    <Shape USE='shape1' containerField='references'/>
    <Transform USE='transform1' containerField='references'/>
    <ViscosityEffect USE='visc1' containerField='references'/>
    <ToggleGroup USE='toggle1' containerField='references'/>
  </PythonScript>
